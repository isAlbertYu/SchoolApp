<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--课程名称 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/course_name"
        android:textSize="20sp"
        android:textColor="#0073ff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:id="@+id/course_textView0" />

    <!--课程分数 -->
    <TextView
        android:textColor="#000000"
        android:textSize="15sp"
        android:id="@+id/course_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:layout_below="@+id/course_textView0"
        android:layout_alignLeft="@+id/course_textView0"
        android:layout_alignStart="@+id/course_textView0" />

    <TextView
        android:id="@+id/course_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/course_textView1"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/course_textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/course_textView1"
        android:layout_alignStart="@+id/course_textView1"
        android:layout_below="@+id/course_textView1"
        android:layout_marginTop="11dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/course_textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/course_textView2"
        android:layout_alignStart="@+id/course_textView2"
        android:layout_alignTop="@+id/course_textView3"
        android:text="TextView" />


</RelativeLayout>